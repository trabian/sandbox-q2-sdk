{
    "include": [
      "src",
      "types"
    ],
    "compilerOptions": {
      "module": "es2015",
      "target": "es5",
      "lib": [
        "dom",
        "es5",
        "es2016"
      ],
      "importHelpers": true,
      "declaration": true,
      "sourceMap": true,
      "rootDir": "./src",
      "strict": true,
      "outDir": "./dist",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "*": [
          "src/*",
          "node_modules/*"
        ]
      },
      "jsx": "react",
      "esModuleInterop": true
    }
  }
